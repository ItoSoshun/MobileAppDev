<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- (1) スプラッシュスクリーンの背景色 -->
        <item name="windowSplashScreenBackground">@color/black</item>

        <!-- (2) 中央に表示するアイコン（Drawableリソースを指定） -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_file</item>

        <!-- (3) アイコンの後ろの背景色（アイコンが円形などで透過している場合に見える） -->
        <item name="windowSplashScreenIconBackgroundColor">@color/purple_500</item>

        <!-- (4) スプラッシュスクリーンが表示された後の、実際のActivityのテーマ -->
        <item name="postSplashScreenTheme">@style/Theme.Nanndatteii</item>
    </style>

    <style name="Theme.Nanndatteii" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>